# Y = A AND B
!begin_macro AND
	!assert $Y = $A&$B
	$A -0.5
	$B -0.5
	$Y  1
	
	$A $B  0.5
	$A $Y -1
	$B $Y -1
!end_macro AND

# Y = A OR B
!begin_macro OR
	!assert $Y = $A|$B
	$A  0.5
	$B  0.5
	$Y -1
	
	$A $B  0.5
	$A $Y -1
	$B $Y -1
!end_macro OR

# Y = NOT A
!begin_macro NOT
	!assert $Y = !$A
	$A $Y 1.0
!end_macro NOT
